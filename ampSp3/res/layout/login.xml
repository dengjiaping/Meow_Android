<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
         <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/top_bg" >

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/back_bg" />

            <TextView
                android:text="登录"
                style="@style/titleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        
         <FrameLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/error_lay"
             android:background="@drawable/login_error_bg"
             android:visibility="gone"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/error_txt"
                 android:layout_gravity="center_vertical|left"
                 android:layout_marginLeft="10dip"
                 />
             
             
         </FrameLayout>
        
        <LinearLayout 
            android:background="@drawable/login_white_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dip"
            >
            <FrameLayout 
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                >
                
                <EditText 
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:hint="用户名"
                    android:layout_gravity="center_vertical|left"
                    android:background="@null"
                    android:id="@+id/phone"
                    android:inputType="phone"
                    android:singleLine="true"
                    />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_line"
                    android:layout_gravity="center_horizontal|bottom"
                    />
                
                
            </FrameLayout>
            
             <FrameLayout 
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                >
                
                <EditText 
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:hint="密码"
                    android:layout_gravity="center_vertical|left"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:id="@+id/password"
                    />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_line"
                    android:layout_gravity="center_horizontal|bottom"
                    />
                
                <ImageView 
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forget_icon"
                    android:background="@drawable/forget_icon"
                    android:layout_gravity="center_horizontal|right"
                    />
                
                
            </FrameLayout>
            
             
             <Button 
                 android:layout_marginTop="20dip"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:background="@drawable/login_btn_bg"
                 android:text="登录"
                 android:textColor="@color/white"
                 android:id="@+id/login"
                 />
            
            <Button 
                 android:layout_marginTop="10dip"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:background="@drawable/register_btn_bg"
                 android:text="注册"
                 android:textColor="@color/white"
                  android:id="@+id/register"
                 />
            
            
        </LinearLayout>
        
        
        </LinearLayout>
    <ProgressBar
     android:visibility="gone"
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateDrawable="@drawable/progressbar"
         />
    
 </FrameLayout>   
