<?xml version="1.0" encoding="utf-8"?>


<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/bg_color"
    >
<LinearLayout 
     
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical"
    >
    
    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/top_bg"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_bg"
            android:id="@+id/back"
            android:layout_gravity="center_vertical|left"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/titleStyle"
            android:text="验证码"
            />
        
        <!-- <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub"
            android:text="下一步"
            android:textColor="@color/white"
            android:background="@drawable/upperright_bg"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="5dip"
            /> -->
        
    </FrameLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_white_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
         <TextView 
            
            android:layout_marginTop="30dip"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/remind"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:textColor="@color/grey"
            />
        
         <FrameLayout 
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dip"
                >
                
                <EditText 
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:hint="请输入六位验证码"
                    android:layout_gravity="center_vertical|left"
                    android:background="@null"
                    android:id="@+id/verification"
                    android:inputType="number"
                    />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_line"
                    android:layout_gravity="center_horizontal|bottom"
                    />
                
                <FrameLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    >
                    <Button 
                        android:id="@+id/sendverification"
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                        android:background="@drawable/v_cutdown_normal"
                        android:layout_gravity="center_vertical|center_horizontal"
                        
                        />
                    
                    <ImageView 
                        android:id="@+id/sendverification_icon"
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                        android:background="@drawable/v_cutdown_pressed"
                        android:visibility="gone"
                        
                        />
                    
                    <TextView 
                        android:id="@+id/sendverification_txt"
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:visibility="gone"
                        android:textSize="8sp"
                        android:textColor="@color/grey"
                        />
                    
                    
                </FrameLayout>
                
                
            </FrameLayout>
            
          <Button 
             android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
             android:layout_marginTop="20dip"
             android:id="@+id/sub"
             android:background="@drawable/register_btn_bg"
             android:text="下一步"
             android:textColor="@color/white"
             />
        
        
    </LinearLayout>
    
    
    

</LinearLayout>





 <ProgressBar
     android:visibility="gone"
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateDrawable="@drawable/progressbar"
         />





</FrameLayout>