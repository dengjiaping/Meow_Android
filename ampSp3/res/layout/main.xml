<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:background="@color/bg_color"
        android:id="@+id/containerBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="52dip"
         >
    </FrameLayout><!-- 48 -->

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bg" >

        <RadioButton
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/home"
             android:button="@drawable/home_btn_bg"
            android:layout_weight="1"
            android:background="@null"
			 /><!--  android:button="@drawable/home_btn_bg" -->
        
        <RadioButton
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/product"
            android:button="@drawable/product_btn_bg"
            android:layout_weight="1"
            android:background="@null"
			 />
        
        <RadioButton
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/timeline"
           android:background="@null"
            android:layout_weight="1"
            android:button="@drawable/timeline_btn_bg"
			 />
        
        <RadioButton
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/more"
             android:background="@null"
            android:layout_weight="1"
            android:button="@drawable/more_btn_bg"
			 />
    </RadioGroup>
    
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingBottom="48dip"
    android:id="@+id/cat_lay"
    android:visibility="gone"
    >
    
    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
         android:layout_gravity="bottom"
        >
        
        <ImageView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/cat_claw_icon"
    android:layout_gravity="right|bottom"
    android:layout_marginRight="16dip"
    />
        
    </FrameLayout>
    
    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        
        ></FrameLayout>
    
</LinearLayout> 

     <ImageView
         android:visibility="gone"
        android:id="@+id/red_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="30dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/red_point" />
    

</FrameLayout>