<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >


<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

     <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/back_bg" />

        <TextView
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资金账户" />
    </FrameLayout>
    
     <LinearLayout 
          android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:visibility="gone"
         android:id="@+id/user_lay"
         >
    
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:id="@+id/no_data_lay"
         >
        <LinearLayout 
            android:layout_width="fill_parent"
         android:layout_height="wrap_content"
            android:background="@drawable/user_top_bg"
            android:orientation="vertical"
            android:padding="10dip"
            >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还没做任何投资，"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:textStyle="bold"
                />
             <TextView 
                 android:layout_marginTop="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赶快去看看我们的产品吧!"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dip"
                android:textStyle="bold"
                />
            
            
        </LinearLayout>
         
        <FrameLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_bottom_bg"
            android:id="@+id/go_to_product"
            >
            
            <TextView 
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical|right"
                 android:textColor="@color/yellow"
                 android:text="查看产品列表"
                 android:drawableRight="@drawable/navi_arrow"
                 android:layout_marginRight="10dip"
                />
            
            
        </FrameLayout>
         
         
         
     </LinearLayout>
     
     
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:id="@+id/data_lay"
         >
        <FrameLayout 
            android:layout_width="fill_parent"
         	android:layout_height="wrap_content"
            android:background="@drawable/user_top_bg"
            >
            
           <LinearLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_gravity="center_vertical|left"
               android:layout_marginLeft="10dip"
               >
               
               <TextView 
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="预期收益"
                   
                   />
               
               <LinearLayout 
                    android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="5dip"
                   
                   >
                   <TextView 
                       
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:textColor="@color/red"
                   android:id="@+id/ExpectedEarnings"
                   android:textSize="20sp"
                   />
                   
                   <TextView 
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:text="元"
                   
                   
                   />
                   
                   
               </LinearLayout>
               
               
               <LinearLayout 
                   android:layout_marginTop="5dip"
                    android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:orientation="horizontal"
                   
                   >
                   <TextView 
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                  android:id="@+id/InvestingPrice"
                   />

                   
                   
               </LinearLayout>
               
               
           </LinearLayout>
            
            
        </FrameLayout>
         
        <FrameLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_bottom_bg"
            
            >
            
            <TextView 
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical|left"
                 android:textColor="@color/grey"
               android:id="@+id/Earnings"
               android:layout_marginLeft="10dip"
                />
            
            
        </FrameLayout>
         
         
         
     </LinearLayout>
     
     
     <LinearLayout 
         android:layout_marginTop="15dip"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:orientation="vertical"
         
         >
         
         
         <FrameLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/more_top_bg"
             android:padding="10dip"
             >
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="实名认证"
                 android:layout_gravity="center_vertical|left"
                 
                 />
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/RealName"
                  android:layout_gravity="center_vertical|right"
                 />
             
             
         </FrameLayout>
         
         <FrameLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/more_middle_bg"
             android:padding="10dip"
             >
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="手机号码"
                 android:layout_gravity="center_vertical|left"
                 
                 />
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/Cellphone"
                  android:layout_gravity="center_vertical|right"
                 />
             
             
         </FrameLayout>
         
          <FrameLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/more_bottom_bg"
             android:padding="10dip"
             >
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="身份证"
                 android:layout_gravity="center_vertical|left"
                 
                 />
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/IdCard"
                  android:layout_gravity="center_vertical|right"
                 
                 />
             
             
         </FrameLayout>
         
         
         
     </LinearLayout>
     
     </LinearLayout>
     
     <LinearLayout 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="20dip"
         android:id="@+id/no_user_lay"
         android:visibility="gone"
         >
         
         <ImageView 
              android:layout_gravity="center_horizontal"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:src="@drawable/user_nodata_icon"
             
             />
          <TextView 
              android:layout_gravity="center_horizontal"
             android:layout_marginTop="10dip"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
            android:id="@+id/phone"
             />
         
         <TextView 
              android:layout_gravity="center_horizontal"
             android:layout_marginTop="10dip"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="对不起,您还不是实名认证用户"
             />
         
         <TextView 
              android:layout_gravity="center_horizontal"
             android:layout_marginTop="5dip"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="在电脑上完成认证,即可开始购买"
             />
         
         
     </LinearLayout>
     
     
    
</LinearLayout>

<ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:indeterminateDrawable="@drawable/progressbar"
        android:visibility="gone" />



</FrameLayout>