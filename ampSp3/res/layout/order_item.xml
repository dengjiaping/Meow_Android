<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_top_bg"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OrderIdentifier"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="20dip"
            />
        
        <FrameLayout 
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button 
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_use_bg"
                android:id="@+id/use"
                android:text="使用道具"
                android:focusable="false"
                android:textColor="@color/white"
               
                />
            
            <TextView 
                 android:visibility="gone"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已使用"
                android:textColor="@color/grey"
                android:drawableRight="@drawable/item_used_icon"
                android:background="@drawable/item_used_bg"
                android:id="@+id/used"
                />
            
            
           
            
            
        </FrameLayout>
        
         <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/more_line"
                />
        
    </FrameLayout>
    
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bottom_bg"
       
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dip"
            >
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
              
              <TextView 
                   android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                  android:text="订单金额:"
                  />
              <TextView 
                  android:layout_marginLeft="5dip"
                   android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                  android:id="@+id/Principal"
                  />
              
              
              
          </LinearLayout>
          
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
              
              <TextView 
                   android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                  android:text="预计收益:"
                  />
              <TextView 
                  android:layout_marginLeft="5dip"
                   android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                  android:id="@+id/Interest"
                  />
              
              
              
          </LinearLayout>
          
           <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
              
              <TextView 
                   android:layout_width="wrap_content"
            	  android:layout_height="wrap_content"
                  android:text="下单时间:"
                  />
              <TextView 
                  android:layout_marginLeft="5dip"
                   android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                  android:id="@+id/OrderTime"
                  />
          </LinearLayout>
            
            
            
        </LinearLayout>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navi_arrow"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dip"
            android:id="@+id/navi_arrow"
            />
        
        
        
    </FrameLayout>
    
    
    
    
</LinearLayout>
